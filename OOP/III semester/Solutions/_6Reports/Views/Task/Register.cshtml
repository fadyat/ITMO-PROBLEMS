@model lab_6.ViewModels.TasksViewModel
<div class="row">
    <h3>Task form</h3>
    <form asp-controller="Task" asp-action="Register" method="post" class="form-horizontal">
        <div class="form-group mt-5">
            <label asp-for="Description"></label>
            <div class="col-md-5">
                <input required asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    <div class="form-group">
            <div class="col-md-5 mt-4">
                <input class="btn btn-success p-1" type="submit" value="Register task"/>
                </div>
        </div>
    </form>
</div>