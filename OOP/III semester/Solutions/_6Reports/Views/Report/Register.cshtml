@model ReportsViewModel
<div class="row">
    <h3>Report form</h3>
    <form asp-controller="Report" asp-action="Register" method="post" class="form-horizontal">
        <div class="form-group mt-5">
            <label asp-for="Employee.Id">Employee Id</label>
            <div class="col-md-5">
                <input required asp-for="Employee.Id" class="form-control"/>
                <span asp-validation-for="Employee.Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5 mt-4">
                <input class="btn btn-success p-1" type="submit" value="Register report"/>
            </div>
        </div>
    </form>
</div>
@if (TempData["EM"] != null)
{
    <div class="alert alert-danger">
        @TempData["EM"]
    </div>
}